<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <!--CORS-->
    <filter>
        <filter-name>cors</filter-name>
        <filter-class>fr.sii.config.filter.CorsFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>cors</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!--Access denied-->
    <error-page>
        <error-code>403</error-code>
        <location>/WEB-INF/jsp/403.jsp</location>
    </error-page>

    <!--User Security-->
    <filter>
        <filter-name>authFilter</filter-name>
        <filter-class>fr.sii.config.filter.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>authFilter</filter-name>
        <url-pattern>/api/restricted/*</url-pattern>
    </filter-mapping>

    <!--Admin Security-->
    <listener>
        <listener-class>org.springframework.web.context.request.RequestContextListener</listener-class>
    </listener>

    <filter>
        <filter-name>authAdminFilter</filter-name>
        <filter-class>fr.sii.config.filter.AuthAdminFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>authAdminFilter</filter-name>
        <url-pattern>/api/admin/*</url-pattern>
    </filter-mapping>

    <!--Submission Security-->
    <filter>
        <filter-name>submissionFilter</filter-name>
        <filter-class>fr.sii.config.filter.SubmissionFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>submissionFilter</filter-name>
        <url-pattern>/api/restricted/sessions/*</url-pattern>
        <url-pattern>/api/restricted/sessions</url-pattern>
    </filter-mapping>


    <!--Csrf-->
    <filter>
        <filter-name>csrfFilter</filter-name>
        <filter-class>fr.sii.config.filter.CsrfFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>csrfFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

</web-app>
